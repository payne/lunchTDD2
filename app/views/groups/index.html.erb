<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>

<table border=2>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Growing?</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.title %></td>
        <td><%= group.description %></td>
        <td><%= group.growing %></td>
        <td><%= link_to 'Show', group %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>
